<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".screens.QuickContactActivity"
    tools:showIn="@layout/activity_quick_contact">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignBounds"
        android:columnCount="3"
        android:useDefaultMargins="true">

        <ImageView
            android:layout_width="@dimen/icons_column_width"
            android:src="@drawable/ic_action_person"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/nameText"
            android:layout_gravity="center_vertical"
            android:layout_columnSpan="2"/>

        <ImageView
            android:id="@+id/ic_action_phone"
            android:src="@drawable/ic_action_phone"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>


        <TextView
            android:id="@+id/phoneText"
            android:layout_width="140dp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/ic_action_message"
            android:src="@drawable/ic_action_message"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ic_action_email"
            android:src="@drawable/ic_action_email"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/emailText"
            android:layout_gravity="center_vertical"
            android:layout_columnSpan="2"
           />


        <ImageView
            android:id="@+id/ic_action_note"
            android:src="@drawable/ic_action_note"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/noteText"
            android:layout_gravity="center_vertical"
            android:layout_columnSpan="2"/>

        <ImageView
            android:id="@+id/ic_action_date_return"
            android:src="@drawable/ic_action_date"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
           />

        <TextView
            android:id="@+id/dateText"
            android:layout_gravity="center_vertical"
            android:layout_columnSpan="2" />

    </GridLayout>

</ScrollView>