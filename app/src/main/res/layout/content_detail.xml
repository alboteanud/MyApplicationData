<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailActivity"
    tools:showIn="@layout/activity_detail"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
 <!--   android:focusableInTouchMode="true"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/edit_text1"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/edit_text_margin"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="NAME"
            android:textColor="@color/colorMyGray"
            android:inputType="textCapCharacters"
            android:ems="10"/>


        <EditText
            android:id="@+id/edit_text2"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:inputType="textCapWords"
            android:ems="10"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_text3"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:text="PHONE"
            android:textColor="@color/colorMyGray"
            android:inputType="textCapCharacters"
            android:layout_marginEnd="@dimen/edit_text_margin"/>

        <EditText
            android:id="@+id/edit_text4"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/edit_text5"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:textColor="@color/colorMyGray"
            android:inputType="textCapCharacters"
            android:text="EMAIL"
            android:layout_marginEnd="@dimen/edit_text_margin"/>

        <EditText
            android:id="@+id/edit_text6"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:inputType="textEmailAddress"
            android:ems="10"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/edit_text7"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:inputType="textCapCharacters"
            android:textColor="@color/colorMyGray"
            android:hint="..."
            android:layout_marginEnd="@dimen/edit_text_margin"/>

        <EditText
            android:id="@+id/edit_text8"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:inputType="textPostalAddress"
            android:ems="10"/>

    </LinearLayout>

</LinearLayout>

</ScrollView>