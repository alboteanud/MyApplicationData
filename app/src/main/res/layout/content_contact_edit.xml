<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".screens.EditActivity"
    tools:showIn="@layout/activity_contact_edit">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnOrderPreserved="true"
        android:useDefaultMargins="true">

        <TableRow>
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_action_person" />


            <EditText
                android:layout_weight="1"
                android:id="@+id/nameEditText"
                android:hint="@string/name_hint"
                android:imeOptions="actionDone"
                android:inputType="textCapWords" />
        </TableRow>

  <TableRow>

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_action_phone" />

        <EditText
            android:id="@+id/phoneEditText"
            android:hint="@string/phone_hint"
            android:layout_weight="1"
            android:inputType="phone" />
  </TableRow>

        <TableRow>
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_action_email" />

        <EditText
            android:id="@+id/emailEditText"
            android:hint="@string/email_hint"
            android:layout_weight="1"
            android:inputType="textEmailAddress" />
        </TableRow>

        <TableRow>
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_action_note" />


        <EditText
            android:id="@+id/noteEditText"
            android:hint="@string/note_hint"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:maxLines="6" />
        </TableRow>

    <TableRow>

        <ImageView
            android:id="@+id/icon_date"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_date" />

        <EditText
            android:id="@+id/dateEditText"
            style="@android:style/TextAppearance.Medium"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/return_date_hint"
            android:editable="false"
            android:layout_weight="1"/>

        <Button
            android:text="@string/button_6M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_6M" />

        <ImageView
            android:id="@+id/button_clear_date"
            android:clickable="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_clear_date" />
    </TableRow>



    </TableLayout>

</ScrollView>