<resources>

    <!-- Base application theme. -->
    <style namef="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item namef="colorPrimary">@color/colorPrimary2</item>
        <item namef="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item namef="colorAccent">@color/colorAccent2</item>
    </style>

    <style namef="AppTheme.NoActionBar">
        <item namef="windowActionBar">false</item>
        <item namef="windowNoTitle">true</item>
    </style>


    <style namef="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style namef="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Activity with no Title -->
    <style namef="ThemeOverlay.MyNoTitleActivity" parent="AppTheme">
        <item namef="windowActionBar">false</item>
        <item namef="windowNoTitle">true</item>
    </style>

    <!-- Dark Buttons -->
    <style namef="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item namef="colorButtonNormal">@color/colorAccent</item>
        <item namef="android:layout_marginRight">4dp</item>
        <item namef="android:layout_marginLeft">4dp</item>
        <item namef="android:textColor">@android:color/white</item>
    </style>

    <!-- Light EditTexts -->
    <style namef="ThemeOverlay.MyLightEditText" parent="ThemeOverlay.AppCompat.Dark" />

    <style namef="ThemeOverlay.MyTextDetail" parent="AppTheme">
        <item namef="android:layout_width">wrap_content</item>
        <item namef="android:layout_height">wrap_content</item>
        <item namef="android:fadeScrollbars">true</item>
        <item namef="android:gravity">center</item>
        <item namef="android:maxLines">5</item>
        <item namef="android:padding">4dp</item>
        <item namef="android:scrollbars">vertical</item>
        <item namef="android:textSize">14sp</item>
    </style>

    <style namef="ThemeOverlay.FirebaseIcon" parent="AppTheme">
        <item namef="android:layout_marginTop">@dimen/icon_top_margin</item>
        <item namef="android:layout_marginBottom">@dimen/icon_bottom_margin</item>
    </style>

    <style namef="ThemeOverlay.MyTitleText" parent="AppTheme">
        <item namef="android:gravity">center</item>
        <item namef="android:textSize">36sp</item>
    </style>

    <style namef="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item namef="colorPrimary">@color/colorPrimary2</item>
        <item namef="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item namef="colorAccent">@color/colorAccent2</item>
    </style>

    <style namef="AppThemeDark.NoActionBar">
        <item namef="windowActionBar">false</item>
        <item namef="windowNoTitle">true</item>
    </style>

    <style namef="AppTheme2" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item namef="colorPrimary">@color/colorPrimary3</item>
        <item namef="colorPrimaryDark">@color/colorPrimaryDark3</item>
        <item namef="colorAccent">@color/colorAccent3</item>
    </style>

 <style namef="AppTheme2.NoActionBar">
        <item namef="windowActionBar">false</item>
        <item namef="windowNoTitle">true</item>
    </style>

</resources>
